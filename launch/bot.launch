<launch>
	<arg name="paused" default="true"/>
	<arg name="gui" default="true"/>
	<arg name="verbose" default="false"/>
	<!-- <arg name="world" default="$(find spherical_bot)/worlds/spherical_bot.world" /> -->
	<arg name="world" default="$(find spherical_bot)/worlds/spherical_bot.world" />
	<arg name="debug" default="false"/>
	<arg name="model" default="$(find spherical_bot)/urdf/hamster_bot_small.urdf"/>


	<!-- include gazebo launcher -->
	<include file="$(find gazebo_ros)/launch/empty_world.launch" >
		
		<arg name="world_name" value="$(arg world)"/>
		<arg name="debug" value="$(arg debug)"/>
		<arg name="gui" value="$(arg gui)"/>
		<arg name="verbose" value="$(arg verbose)"/>
		<arg name="paused" value="$(arg paused)"/>
	</include>

	<param name="robot_description" command="$(find xacro)/xacro.py $(arg model)" />
  <rosparam file="$(find spherical_bot)/config/pos_control.yaml" command="load"/>
  <node name="controller_spawner" pkg ="controller_manager" type="spawner" ns="/simple_model" args="base_to_second_joint_position_controller 		base_to_first_joint_position_controller  
	joint_state_controller --shutdown-timeout 3"/>

  <!-- push robot_description to factory and spawn robot in gazebo -->
  <!-- <node name="urdf_spawner" pkg="gazebo_ros" type="spawn_model"
        args="-x -1.35 -y 1.35 -z 0.03 -unpause -urdf -model robot -param robot_description" respawn="false" output="screen" /> -->
        <node name="urdf_spawner" pkg="gazebo_ros" type="spawn_model"
        args="-x 0 -y 0 -z 0.1 -unpause -urdf -model robot -param robot_description" respawn="false" output="screen" />

</launch>